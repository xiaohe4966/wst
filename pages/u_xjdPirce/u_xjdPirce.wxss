/* pages/u_xjd/u_xjd.wxss */
page{
  background: #eaebef;
}
.app{
  width: 100%;
  padding: 0 30rpx 50rpx;
  box-sizing: border-box;
}
.title{
  width: 100%;
  padding: 25rpx 0;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  color: #3f4044;
  font-size: 28rpx;
  font-weight: 700;
}
.title image{
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  margin-right: 20rpx;
}
.con{
  width: 100%;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #939599;
}
.con_con{
  color: #3f4044;
  font-size: 28rpx;
}
.con_radio{
  width: 70%;
  height: 70rpx;
  padding-left: 15rpx;
  box-sizing: border-box;
  border-radius: 5rpx;
  background: white;
  display: flex;
  align-items: center;
  color: #3f4044;
  font-size: 26rpx;
  margin-top: 30rpx;
}
.con_radio image{
  width: 35rpx;
  height: 35rpx;
  display: inline-block;
  margin-right: 10rpx;
}
.con_img{
  width: 100%;
  display: flex;
  align-items: center;
}
.con_img image{
  width: 210rpx;
  height: 210rpx;
  display: inline-block;
  margin-right: 25rpx;
}
.con_img image:nth-child(3n){
  margin-right: 0;
}
.con_inp{
  width: 100%;
  height: 80rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
  background:white;
  border-radius: 50rpx;
  color: #000;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}
.inp_jf{
  width: 100%;
  padding-left: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #3f4044;
}
.btn{
  width: 100%;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  background: #306dff;
  color: white;
  font-size: 30rpx;
  font-weight: 700;
  margin-top: 90rpx;
  border-radius: 10rpx;
  box-shadow: #a4b1d2 0 10px 13px;
}

.fix{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.6);
  /* filter: blur(20px); */
  position: fixed;
  top: 0;
  z-index: 11;
}
.fix_v{
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.fix_view{
  width: 90%;
  padding: 40rpx;
  box-sizing: border-box;
  background: white;
  border-radius: 10rpx;
}
.fix_title{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.fix_title image{
  width: 50rpx;
  height: 50rpx;
  display: block;
}
.fix_img{
  width: 100%;
  display: block;
  margin: 0 0 20rpx;
}
.fix_js{
  width: 100%;
  text-align: center;
  color: #999;
  font-size: 26rpx;
}
.fix_btn{
  width: 100%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  background: #306dff;
  color: white;
  font-size: 28rpx;
  border-radius: 8rpx;
  margin-top: 10rpx;
}